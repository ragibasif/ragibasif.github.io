---
import Layout from "./Layout.astro";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, pubDate } = Astro.props;
---

<Layout>
  <main>
    <article class="post">
      <div class="post-header">
        <h1 class="post-title">{title}</h1>
        <div class="date">
          <FormattedDate date={pubDate} />
        </div>
        <hr />
      </div>
      <section class="post-content">
        <slot />
      </section>
    </article>
  </main>
</Layout>

<style>
  .post {
    width: 100%;
    max-width: var(--content-width);
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-title {
    font-size: 2rem;
    font-weight: 700;
    font-family: "Atkinson", var(--sans);
    margin-bottom: 0.5rem;
    color: var(--white);
  }

  .date {
    font-size: var(--font-size-s);
    color: var(--gray);
    font-variant-numeric: tabular-nums;
    letter-spacing: var(--spacing-s);
  }

  .post-content {
    font-family: "Atkinson", var(--sans);
    font-size: var(--font-size-m);
    line-height: 1.75;
    color: var(--text);
  }

  .post-content h2,
  .post-content h3,
  .post-content h4 {
    font-weight: 500;
    color: var(--white);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .post-content h2 {
    font-size: 1.5rem;
  }

  .post-content h3 {
    font-size: 1.25rem;
  }

  .post-content p,
  .post-content li {
    color: var(--gray);
    margin-bottom: 1rem;
  }

  .post-content ul {
    list-style: disc;
    padding-left: 1.5rem;
  }

  .post-content ol {
    list-style: decimal;
    padding-left: 1.5rem;
  }

  .post-content a {
    color: var(--blue);
    text-decoration: underline;
  }

  .post-content blockquote {
    border-left: 4px solid var(--blue);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--gray);
    font-style: italic;
  }

  .post-content code {
    background-color: rgba(255, 255, 255, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: var(--mono);
    font-size: 0.9em;
    color: var(--green);
  }

  .post-content pre {
    background-color: var(--black);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-size: 0.9rem;
    margin: 1.5rem 0;
  }

  .post-content pre code {
    color: var(--white);
    background: none;
    padding: 0;
  }
</style>
