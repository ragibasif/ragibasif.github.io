---
import Base from "../layouts/Base.astro";
import Link from "../components/Link.astro";
import { NAME, DESCRIPTION } from "../consts/site";
---

<Base title={NAME} description={DESCRIPTION}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <section id="home" class="text-center mb-16">
      <h1
        class="text-4xl md:text-6xl font-bold mb-6"
        style="color: var(--color-text)"
      >
        Ragib Asif
      </h1>
      <p class="text-xl md:text-2xl mb-8" style="color: var(--color-text-alt)">
        Software Engineer
      </p>
      <p
        class="text-lg max-w-2xl mx-auto mb-8"
        style="color: var(--color-text-alt)"
      >
        Passionate about creating innovative solutions and sharing knowledge
        through technology.
      </p>

      <!-- Social Links -->
      <div class="flex flex-wrap justify-center gap-6">
        <Link href="https://github.com/ragibasif" name="GitHub" external />
        <Link
          href="https://www.linkedin.com/in/ragibasif"
          name="LinkedIn"
          external
        />
        <Link
          href="https://www.youtube.com/@ragib_asif"
          name="YouTube"
          external
        />
        <Link href="ragibasif@tuta.io" name="Email" mailto />
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="mb-16">
      <h2 class="text-3xl font-bold mb-6" style="color: var(--color-text)">
        About Me
      </h2>
      <p class="text-lg leading-relaxed" style="color: var(--color-text-alt)">
        I'm a software engineer with a passion for building innovative solutions
        and sharing knowledge. I enjoy working on projects that make a
        difference and love to learn new technologies.
      </p>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="mb-16">
      <h2 class="text-3xl font-bold mb-6" style="color: var(--color-text)">
        Projects
      </h2>
      <p class="text-lg" style="color: var(--color-text-alt)">
        Coming soon... Check out my GitHub for current projects!
      </p>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="mb-16">
      <h2 class="text-3xl font-bold mb-6" style="color: var(--color-text)">
        Get In Touch
      </h2>
      <p class="text-lg mb-6" style="color: var(--color-text-alt)">
        I'm always interested in hearing about new opportunities and interesting
        projects.
      </p>
      <div class="flex flex-wrap gap-4">
        <Link href="ragibasif@tuta.io" name="Send Email" mailto />
        <Link
          href="https://www.linkedin.com/in/ragibasif"
          name="Connect on LinkedIn"
          external
        />
      </div>
    </section>
  </div>
</Base>
