---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
---

<Layout title="404" description="404 Not Found">
  <Container class="not-found">
    <h1>404 — Not Found</h1>
    <p>Sorry, the page you're looking for doesn’t exist.</p>
  </Container>
  <style>
    .not-found {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      max-width: var(--content-width);
      width: 100%;
      margin: 2rem auto;
    }

    .not-found h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .not-found p {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }
  </style>
</Layout>
