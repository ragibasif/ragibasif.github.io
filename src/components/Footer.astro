---
import ExternalLink from "./ExternalLink.astro";
const date = new Date().getFullYear();

const github = "https://www.github.com/ragibasif";
const linkedin = "https://www.linkedin.com/in/ragibasif";
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      &copy; {date} Ragib Asif. All rights reserved.
    </div>
    <div class="social-links">
      <ExternalLink href=`${github}`>GitHub</ExternalLink>
      <ExternalLink href=`${linkedin}`>LinkedIn</ExternalLink>
    </div>
  </div>
</footer>

<style>
  footer {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-light);
    line-height: 1.75;
    color: var(--text-secondary);
    opacity: 0.75;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    flex-wrap: nowrap;
    width: 100%;
  }

  .copyright {
    white-space: nowrap;
  }

  .copyright .date {
    opacity: 1;
  }

  .social-links {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
</style>
