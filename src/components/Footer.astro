---
import Link from "@components/Link.astro";
const YEAR = new Date().getFullYear();

import Container from "@components/Container.astro";
import { SITE } from "@consts";
import { SOCIALS } from "@consts";

const rss = "/rss.xml";
---

<footer>
  <Container class="footer-content">
    <p class="copyright">
      &copy; {YEAR}
      <span>{SITE.NAME}</span>. All rights reserved.
    </p>
    <div class="social-links">
      {
        SOCIALS.map(({ HREF, NAME }) => (
          <Link external={true} href={HREF}>
            {NAME}
          </Link>
        ))
      }
      <Link external={true} href={rss}>RSS</Link>
    </div>
  </Container>
</footer>

<style>
  footer {
    color: var(--gray);
    opacity: 0.75;
    padding: 2rem 1rem 4rem;
    text-align: center;
    margin-top: 4rem;
    max-width: var(--content-width);
    width: 100%;
  }

  .copyright span {
    font-weight: bold;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .social-links {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .social-links a {
    color: var(--link);
    text-decoration: underline;
  }

  @media (min-width: 640px) {
    .footer-content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      text-align: center;
      max-width: var(--content-width);
      margin: 0 auto;
      align-items: center;
    }
  }
</style>
