---
interface Props {
  date: Date | string | number;
}

const { date } = Astro.props as Props;
const dateObject = date instanceof Date ? date : new Date(date);
const isValidDate = !Number.isNaN(dateObject.getTime());
const isoString = isValidDate ? dateObject.toISOString() : undefined;
---

<time datetime={isoString}>
  {
    // You can customize the date format using the options below:
    // - year: "numeric" | "2-digit"
    // - month: "numeric" | "2-digit" | "long" | "short" | "narrow"
    // - day: "numeric" | "2-digit"
    // - weekday: "long" | "short" | "narrow"
    // - hour: "numeric" | "2-digit"
    // - minute: "numeric" | "2-digit"
    // - second: "numeric" | "2-digit"
    // - timeZoneName: "short" | "long"
    // - hour12: true | false
    // Example: { year: "numeric", month: "long", day: "2-digit", weekday: "short" }
    isValidDate
      ? dateObject.toLocaleDateString("en-us", {
          year: "numeric",
          month: "long",
          day: "2-digit",
        })
      : String(date)
  }
</time>
